---
// Member card component
interface Props {
  member: {
    name: string;
    username?: string;
    role?: string;
    batch?: number;
  };
}

const { member } = Astro.props;
const username = member.username || '';
const avatar = username ? `https://github.com/${username}.png?size=200` : '/icon.png';
const profileUrl = username ? `https://github.com/${username}` : undefined;
---
<div class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
  {profileUrl ? (
    <a href={profileUrl} target="_blank" rel="noopener noreferrer">
      <img src={avatar} alt={member.name} class="w-16 h-16 rounded-full" loading="lazy" />
    </a>
  ) : (
    <img src={avatar} alt={member.name} class="w-16 h-16 rounded-full" loading="lazy" />
  )}
  <div class="min-w-0">
    <div class="flex items-center gap-2">
      {profileUrl ? (
        <a href={profileUrl} target="_blank" rel="noopener noreferrer" class="font-semibold text-gray-900 dark:text-gray-100 hover:underline truncate">
          {member.name}
        </a>
      ) : (
        <span class="font-semibold text-gray-900 dark:text-gray-100 truncate">{member.name}</span>
      )}
      {member.role && (
        <span class="text-xs px-2 py-0.5 rounded-full bg-blue-100 text-blue-700 dark:bg-blue-900/40 dark:text-blue-300">
          {member.role}
        </span>
      )}
    </div>
    {member.batch && (
      <p class="text-sm text-gray-600 dark:text-gray-400 truncate">Batch {member.batch}</p>
    )}
  </div>
</div>
